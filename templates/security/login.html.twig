{% extends 'base.html.twig' %}

{% block body %}
    <h1>Se connecter</h1>

    <form action="{{ path('security_login') }}" method="post">
        <div class="form-group">
            <input type="text" placeholder="Veillez rentrer votre login" required name="_username" class="form-control">
        </div>

        <div class="form-group">
            <input type="password" placeholder="Veillez rentrer votre mots de passe" required name="_password"
                   class="form-control">
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-success">Connexion</button>
        </div>
    </form>
{% endblock %}